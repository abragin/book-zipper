<h1> New chapter zip </h1>

<%= form_with model: [@chapter_zip.book_zip, @chapter_zip] do |form| %>
  <div>
    <%= form.label :source_chapter %><br>
    <%= form.collection_select :source_chapter_id, @chapter_zip.book_zip.ebook_source.chapters, :id, :title_with_len %>
  </div>

  <div>
    <%= form.label :target_chapter %><br>
    <%= form.collection_select :target_chapter_id, @chapter_zip.book_zip.ebook_target.chapters, :id, :title_with_len  %>
  </div>
  <div>
    <%= form.label :start_position_source %><br>
    <%= form.number_field :start_position_source %>
  </div>
  <div>
    <%= form.label :end_position_source %><br>
    <%= form.number_field :end_position_source %>
  </div>
  <div>
    <%= form.label :start_position_target %><br>
    <%= form.number_field :start_position_target %>
  </div>
  <div>
    <%= form.label :end_position_target %><br>
    <%= form.number_field :end_position_target %>
  </div>
  <div>
    <%= form.label :position %><br>
    <%= form.number_field :position %>
  </div>
  <div>
    <%= form.hidden_field :book_zip_id %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
