<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author.name %>
</p>
<p>
  <strong>Epub books:</strong>
  <ul>
  <% @book.epub_books.each do |ebook| %>
    <li>
      <%= link_to ebook.language.name, epub_book_path(ebook) %>
    </li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
